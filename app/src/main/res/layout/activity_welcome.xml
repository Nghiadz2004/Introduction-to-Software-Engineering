<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Header text -->
    <TextView
        android:id="@+id/wcHeaderText"
        android:layout_width="300dp"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:text="Welcome to Group 1's Library"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="italic|bold"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/wcMessageHolder" />

    <!-- Banner image -->
    <ImageView
        android:id="@+id/wcBannerImage"
        android:layout_width="246dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:src="@drawable/banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wcHeaderText" />

    <!-- Banner message -->
    <ImageView
        android:id="@+id/wcMessageHolder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="-30dp"
        android:layout_marginRight="-40dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/light_purple"
        app:layout_constraintEnd_toStartOf="@id/wcBannerImage"
        app:layout_constraintBottom_toTopOf="@id/wcBannerImage" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="-30dp"
        android:layout_marginRight="-40dp"
        android:gravity="center"
        android:text="Hi!"
        android:textSize="48sp"
        android:textStyle="italic|bold"
        android:textColor="@color/light_blue"
        app:layout_constraintEnd_toStartOf="@id/wcBannerImage"
        app:layout_constraintBottom_toTopOf="@id/wcBannerImage" />

    <!-- Button navigate to login page -->

    <!-- Button to Login with Facebook account -->

    <Button
        android:id="@+id/loginByUsername"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/rectangle_border_bg"
        android:backgroundTint="@color/light_purple"
        android:drawableStart="@drawable/login_icon"
        android:drawablePadding="-10dp"
        android:drawableTint="@color/light_blue"
        android:paddingLeft="20dp"
        android:text="Login with Username"
        android:textAllCaps="false"
        android:textColor="@color/light_blue"
        android:textSize="24sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wcBannerImage" />

    <Button
        android:id="@+id/loginByGoogle"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/rectangle_border_bg"
        android:backgroundTint="@color/light_purple"
        android:text="Login with Google"
        android:textSize="24sp"
        android:textStyle="italic|bold"
        android:textAllCaps="false"
        android:textColor="@color/light_blue"
        android:drawableStart="@drawable/facebook_icon"
        android:drawableTint="@color/light_blue"
        android:drawablePadding="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginByUsername" />

    <!-- Button navigate to register page -->
    <Button
        android:id="@+id/register"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/rectangle_border_bg"
        android:backgroundTint="@color/light_purple"
        android:text="Register an user"
        android:textSize="24sp"
        android:textStyle="italic|bold"
        android:textAllCaps="false"
        android:textColor="@color/light_blue"
        android:drawableStart="@drawable/register_icon"
        android:drawableTint="@color/light_blue"
        android:drawablePadding="-50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginByGoogle" />

</androidx.constraintlayout.widget.ConstraintLayout>