<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".activity.HomeActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|start"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/signature_logo_imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/signature_logo"/>

    <View
        android:layout_width="200dp"
        android:layout_height="0dp"/>

    <ImageButton
        android:id="@+id/notifyIconImgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/notify_icon"/>

    <View
        android:layout_width="24dp"
        android:layout_height="0dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/avatar_account_placeholder"/>

    </LinearLayout>

    <!-- Container cho Fragment -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="555dp"
        android:background="@drawable/corner_bg"
        android:backgroundTint="@color/light_purple"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_blue"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2"
        app:layout_contraintEnd_toEndOf="parent"
        app:layout_contraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/light_purple"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="12dp"
            android:padding="6dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/home_icon"
            android:text="Home"
            android:textColor="@color/light_gray"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_font"
            android:fontVariationSettings="'wght' 1000"
            android:textSize="32px"/>

        <Button
            android:id="@+id/myBookBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:padding="6dp"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/book_icon"
            android:text="My Books"
            android:textAllCaps="false"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/inter_font"
            android:textSize="32px"
            android:fontVariationSettings="'wght' 1000"/>

        <Button
            android:id="@+id/favoriteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:padding="6dp"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/favorite_icon"
            android:text="Favorites"
            android:textAllCaps="false"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/inter_font"
            android:textSize="32px"
            android:fontVariationSettings="'wght' 1000"/>

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="6dp"
            android:padding="6dp"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/profile_icon"
            android:text="Profile"
            android:textAllCaps="false"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/inter_font"
            android:textSize="32px"
            android:fontVariationSettings="'wght' 1000"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>