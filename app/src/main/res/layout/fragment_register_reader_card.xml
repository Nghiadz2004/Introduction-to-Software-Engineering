<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_register_reader_card"
    android:background="@color/light_purple"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back_button_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/light_blue"
        tools:ignore="UseAppTint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/avatarIV"
        android:layout_width="236dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:text="Register Reader Card"
        android:fontFamily="@font/inter_font"
        android:fontVariationSettings="'wght' 800"
        android:textColor="@color/light_blue"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/avatar_img"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:background="@drawable/ic_launcher_background"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/editAvatarBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="104dp"
        android:layout_marginStart="124dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/light_blue"
        android:src="@drawable/edit_icon"
        app:layout_constraintEnd_toEndOf="@id/avatar_img"
        app:layout_constraintStart_toStartOf="@id/avatar_img"
        app:layout_constraintTop_toTopOf="@id/avatar_img"/>

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="215dp"
        android:layout_marginTop="234dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="Full Name"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <EditText
                android:id="@+id/fullnameET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_corner_radius"
                android:backgroundTint="@color/light_blue"
                android:paddingLeft="30dp"
                android:text="Full Name"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textSize="24dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="Email"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <EditText
                android:id="@+id/emailET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_corner_radius"
                android:backgroundTint="@color/light_blue"
                android:paddingLeft="30dp"
                android:text="Email"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textSize="24dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="Birthday"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <EditText
                android:id="@+id/birthdayET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_corner_radius"
                android:backgroundTint="@color/light_blue"
                android:paddingLeft="30dp"
                android:text="Birthday"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textSize="24dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="Address"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <EditText
                android:id="@+id/addressET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_corner_radius"
                android:backgroundTint="@color/light_blue"
                android:paddingLeft="30dp"
                android:text="Address"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textSize="24dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="Type"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textColor="@color/black"
                android:textSize="24dp"/>

            <RadioGroup
                android:id="@+id/typeRG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/radio_x"
                    style="@style/CustomRadioButton"
                    android:paddingStart="9dp"
                    android:text="X"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 700"/>

                <RadioButton
                    android:id="@+id/radio_y"
                    style="@style/CustomRadioButton"
                    android:paddingStart="9dp"
                    android:text="Y"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 700"/>
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="124dp"
        android:layout_height="38dp"
        android:layout_marginTop="467dp"
        android:background="@drawable/button_corner_radius"
        android:backgroundTint="@color/light_blue"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_font"
        android:fontVariationSettings="'wght' 700"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>