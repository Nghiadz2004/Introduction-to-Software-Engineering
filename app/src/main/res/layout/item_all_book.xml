<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_favorite_book_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@color/light_purple_2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="112.40592956542969dp"
            android:layout_height="150dp"
            android:src="@drawable/harry_potter_cover" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harry Potter and Philosopherâ€™s Stone"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 800"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:id="@+id/authorTV"
                    android:text="Author: "
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:textSize="15dp"
                    android:textColor="@color/light_gray_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:id="@+id/bookAuthor"
                    android:text="J. K. Rowling"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:textSize="15dp"
                    android:textColor="@color/light_gray_2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:id="@+id/categoryTV"
                    android:text="Category: "
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:textSize="15dp"
                    android:textColor="@color/light_gray_2"/>

                <TextView
                    android:id="@+id/bookCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Fiction, Novel"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:textSize="15dp"
                    android:textColor="@color/light_gray_2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Copy left: "
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/copyLeftTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/removeBT"
                    android:layout_width="110dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_corner_radius"
                    android:backgroundTint="@color/light_blue"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:id="@+id/editBT"
                    android:layout_width="74dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_corner_radius"
                    android:backgroundTint="@color/light_blue"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>