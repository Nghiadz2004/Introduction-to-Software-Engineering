<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_profile"
    android:background="@color/light_purple"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/ic_launcher_background"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_width="107dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_corner_radius"
                android:backgroundTint="@color/light_blue"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textSize="24dp"/>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="146dp"
                    android:layout_height="29dp"
                    android:text="Information"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 700"
                    android:textColor="@color/light_blue"
                    android:textSize="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Full Name"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_corner_radius"
                        android:backgroundTint="@color/light_blue"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:text="Full Name"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textSize="24dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Username"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_corner_radius"
                        android:backgroundTint="@color/light_blue"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:text="Username"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textSize="24dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Email"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_corner_radius"
                        android:backgroundTint="@color/light_blue"
                        android:paddingLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="Email"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textSize="24dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Birthday"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_corner_radius"
                        android:backgroundTint="@color/light_blue"
                        android:paddingLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="Birthday"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textSize="24dp"
                        android:textColor
                            ="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Address"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_corner_radius"
                        android:backgroundTint="@color/light_blue"
                        android:paddingLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="Address"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textSize="24dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="144dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_corner_radius"
                android:backgroundTint="@color/light_blue"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 700"
                android:textSize="24dp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="146dp"
                    android:layout_height="29dp"
                    android:text="Reader Card"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 700"
                    android:textColor="@color/light_blue"
                    android:textSize="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Type"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_corner_radius"
                        android:backgroundTint="@color/light_blue"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:text="X"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textSize="24dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Due Date"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_corner_radius"
                        android:backgroundTint="@color/light_blue"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:text="Due Date"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textSize="24dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:text="Status"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textColor="@color/black"
                        android:textSize="24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_corner_radius"
                        android:backgroundTint="@color/light_blue"
                        android:paddingLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="Ok"
                        android:fontFamily="@font/inter_font"
                        android:fontVariationSettings="'wght' 700"
                        android:textSize="24dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 700"
                    android:text="Notes: If you don’t have Reader Card or Card Expired, click here to register new Reader Card"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                
                <Button
                    android:layout_width="144dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_corner_radius"
                    android:backgroundTint="@color/light_blue"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 700"
                    android:textSize="24dp"/>
                
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>