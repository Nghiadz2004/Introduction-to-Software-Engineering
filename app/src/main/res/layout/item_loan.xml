<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/loanItem"
    android:orientation="vertical"
    android:background="@color/light_purple">

    <TextView
        android:id="@+id/loanIndexTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/inter_font"
        android:fontVariationSettings="'wght' 800"
        android:textStyle="italic|bold"
        android:textColor="@color/pale_blue"
        android:textSize="22sp"
        android:paddingStart="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:background="@color/light_purple">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/harry_potter_cover" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <!-- Book Title -->
            <TextView
                android:id="@+id/lBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harry potter and Philosopher's Stone"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:textColor="@color/black" />

            <!-- Book Author -->
            <TextView
                android:id="@+id/lAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Author: J.K.Rowling"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Copy ID -->
            <TextView
                android:id="@+id/lCopyId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="CopyID: 01"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Borrowed by -->
            <TextView
                android:id="@+id/lReader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Borrowed by: RC01"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Processed by -->
            <TextView
                android:id="@+id/lRecorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Processed by: LB01"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Loan date -->
            <TextView
                android:id="@+id/lLoanDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Loan date: 23 May 2025"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Due date -->
            <TextView
                android:id="@+id/lDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Due date: 28 May 2025"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Status -->
            <TextView
                android:id="@+id/lStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Status: 5 days left"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:alpha="0.3"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>
</LinearLayout>