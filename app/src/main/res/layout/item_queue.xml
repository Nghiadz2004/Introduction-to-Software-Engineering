<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/queueItem"
    android:backgroundTint="@color/light_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@color/light_purple">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/harry_potter_cover" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <!-- Book Title -->
            <TextView
                android:id="@+id/qBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harry potter and Philosopher's Stone"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:textColor="@color/black" />

            <!-- Book Author -->
            <TextView
                android:id="@+id/qAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Author: J.K.Rowling"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Copy left -->
            <TextView
                android:id="@+id/qCopyLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Copy left: 11"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Borrowed by -->
            <TextView
                android:id="@+id/qReader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Borrowed by: RC01"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Queue Status -->
            <TextView
                android:id="@+id/qStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Status: ok"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnReject"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="Reject"
                    android:textSize="16sp"
                    android:textStyle="italic|bold"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/button_corner_radius"
                    app:backgroundTint="@color/red" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnApprove"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="5"
                    android:background="@drawable/button_corner_radius"
                    app:backgroundTint="@color/green"
                    android:gravity="center"
                    android:text="Approve"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>