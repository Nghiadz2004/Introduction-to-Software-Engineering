<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reportLostItem"
    android:backgroundTint="@color/light_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="@color/light_purple">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/harry_potter_cover" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <!-- Book Title -->
            <TextView
                android:id="@+id/rBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harry potter and Philosopher's Stone"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:textColor="@color/black" />

            <!-- Book Author -->
            <TextView
                android:id="@+id/rAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Author: J.K.Rowling"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Copy ID -->
            <TextView
                android:id="@+id/rCopyId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Copy ID: 01"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Borrowed by -->
            <TextView
                android:id="@+id/rReader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Borrowed by: RC01"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Loan date -->
            <TextView
                android:id="@+id/rBorrowDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Loan date: 23 May 2025"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Return date -->
            <TextView
                android:id="@+id/rDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Due date: 28 May 2025"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Status -->
            <TextView
                android:id="@+id/rBookStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Book Status: lost"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <!-- Book Status -->
            <TextView
                android:id="@+id/rFine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Fine: 50000 VND"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textColor="@color/light_gray_2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Processed"
                android:textSize="16sp"
                android:textStyle="italic|bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_corner_radius"
                app:backgroundTint="@color/light_blue" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>