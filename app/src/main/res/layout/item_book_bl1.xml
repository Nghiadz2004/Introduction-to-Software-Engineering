<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginEnd="8dp"
    android:background="@color/light_purple"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imgCoverIV"
        android:layout_width="115.23dp"
        android:layout_height="163dp"
        android:scaleType="centerCrop"
        android:src="@drawable/harry_potter_cover"/>

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="115.23dp"
        android:layout_height="wrap_content"
        android:text="Harry Potter and the Goblet of Fire"
        android:fontFamily="@font/inter_font"
        android:fontVariationSettings="'wght' 800"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingStart="4dp"/>

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="115.23dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_font"
        android:fontVariationSettings="'wght' 800"
        android:maxLines="1"
        android:text="by J.K. Rowling"
        android:textColor="@color/light_gray_2"
        android:textSize="12sp"
        android:paddingStart="4dp"/>
</LinearLayout>