<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_book_item"
    android:layout_marginBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/light_purple_2"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="112.40592956542969dp"
            android:layout_height="159dp"
            android:background="@drawable/button_corner_radius"
            android:backgroundTint="@color/white">

            <ImageView
                android:id="@+id/bookImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/harry_potter_cover"
                tools:ignore="ContentDescription" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/inter_font"
                android:fontVariationSettings="'wght' 800"
                android:maxLines="1"
                android:text="Harry Potter and Philosopherâ€™s Stone"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                tools:ignore="HardcodedText,SpUsage,UnusedAttribute,TextSizeCheck" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/authorTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:gravity="start"
                    android:text="Author: "
                    android:textColor="@color/light_gray_2"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    tools:ignore="HardcodedText,SpUsage,UnusedAttribute,TextSizeCheck,TextContrastCheck" />

                <TextView
                    android:id="@+id/bookAuthorTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:gravity="start"
                    android:text="J. K. Rowling"
                    android:textColor="@color/light_gray_2"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText,SpUsage,UnusedAttribute,TextSizeCheck,TextContrastCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/categoryTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:gravity="start"
                    android:text="Category: "
                    android:textColor="@color/light_gray_2"
                    android:textSize="15dp"
                    android:textStyle="bold|italic"
                    tools:ignore="HardcodedText,SpUsage,UnusedAttribute,TextSizeCheck,TextContrastCheck" />

                <TextView
                    android:id="@+id/bookCategoryTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:gravity="start"
                    android:text="Fiction, Novel"
                    android:textColor="@color/light_gray_2"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText,SpUsage,UnusedAttribute,TextSizeCheck,TextContrastCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dueTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:gravity="start"
                    android:text="Due: "
                    android:textStyle="bold|italic"
                    android:textColor="@color/light_gray_2"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText,SpUsage,UnusedAttribute,TextSizeCheck,TextContrastCheck" />

                <TextView
                    android:id="@+id/bookDueDateLeftTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:gravity="start"
                    android:text="3 days"
                    android:textColor="@color/light_gray_2"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText,SpUsage,UnusedAttribute,TextSizeCheck,TextContrastCheck" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/favBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/button_corner_radius"
                    android:backgroundTint="@color/light_blue"
                    android:maxWidth="20dp"
                    android:maxHeight="20dp"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/favorite_icon"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription,UseAppTint,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_corner_radius"
                    android:backgroundTint="@color/light_blue"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    tools:ignore="ButtonOrder,HardcodedText,UnusedAttribute" />

                <Button
                    android:id="@+id/lostBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_corner_radius"
                    android:backgroundTint="@color/light_blue"
                    android:fontFamily="@font/inter_font"
                    android:fontVariationSettings="'wght' 800"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="Report lost"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    tools:ignore="HardcodedText,UnusedAttribute,TextContrastCheck,TouchTargetSizeCheck" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>